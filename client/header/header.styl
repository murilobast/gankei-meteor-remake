@import '../vars-mixins'

.header
	height 64px
	width 100% 
	background $white
	border-bottom 1px solid $border-grey
	position fixed
	z-index 100
	&__menu
		cursor pointer
		width 48px
		height inherit 
		float left
		border-right 1px solid $border-grey
		padding 19px 11px
		z-index 1
		@media (min-width: 1200px) and (max-width: 1450px)
			display none
		&__icon
			width 24px
	&__logo
		height inherit
		width 120px
		float left
		&__title
			font-size 24px 
			line-height 64px
			text-align center
			font-weight 100
	&__profile
		height 64px
		float right
		overflow hidden 
		transition(all, 0.2s)
		&:hover
			height 164px
		&__avatar
			border-left 1px solid $border-grey
			float left
			width 64px
			&__img
				width 42px
				margin 11px 
				border-radius(100%)
		&__username
			float left
			height inherit
			padding 0 10px 
			&__text
				line-height 64px
				text-align center
				vertical-align center
		&__logout
			height inherit
			float right
			width 48px
			border-left 1px solid $border-grey
			text-align center
			&__icon
				width 20px
				margin 22px 0
				display inline-block
		&__login
			padding 0 10px
			float right
			height 64px
			&__header
				height 64px
				text-align center
				&__icon
					width 36px
					margin 14px
					margin-right 0  
					border-radius(100%)
					float left
					background $light-grey
				&__title
					float left
					line-height 64px
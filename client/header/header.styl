@import '../vars-mixins'

.shadow
	depth(0)
.action
	top 0
	height 56px
	width 100% 
	background #303035
	position fixed
	z-index 10
	depth(2)
	&__menu
		float left
		border none
		background transparent 
		z-index 1 
		display inline-block
		height 48px
		width 56px
		cursor pointer
		border-radius(2px)
		outline none
		transition(0.2 ease)
		-webkit-transform translateZ(0)
		&:hover
			opacity 1 
			.lines
				&:before
					top 5px
				&:after
					top -5px
		.lines
			line()
			position relative
			&:before, &:after
				line()
				position absolute
				left 0
				content ''
				transform-origin: 0.5px center
			&:before
				top 5px
			&:after
				top -5px
	&__menu.isOpen
		.lines
			width 17px
			&:before, &:after
				top 0
				width 12px
			&:before
				transform(rotate3d(0,0,1,45deg))
			&:after
				transform(rotate3d(0,0,1,-45deg))
	&__logo
		height inherit
		width 120px
		float left
		&__title
			display block
			font-size 24px 
			line-height 56px
			text-align left
			font-weight 200
			color $white
			&.isOpen
				display none
	&__search
		margin-right -380px
		cursor pointer
		transition(all 0.2s)
		&__label
			-webkit-transform translateZ(0)
			transition(opacity 0.2s)
			position absolute
			right 0
			line-height 36px
			margin-top 10px
			padding-left 26px
			color $white 
			font-weight 100 
			width 80%
			min-width 200px
			max-width 360px
			z-index -1
			font-size 18px 
			&:before
				content ''
				background-image url('/icons/search.svg')
				height 24px
				width 24px
				display block
				opacity 0.75
				margin-right 10px
				bottom 6px
				left 0
				position absolute
		&__input
			background transparent
			position absolute
			top 0
			right 0
			height 36px
			margin 10px
			display block
			width 80%
			border none
			border-bottom 1px solid $light-grey
			padding 0px
			min-width 200px
			max-width 360px
			outline none
			font-weight 200 
			font-size 18px
			padding-left 10px 
			color $white
			&:focus ~ label, &:valid ~ label
				opacity 0
			&:focus ~ .bar:before, &:focus ~ .bar:after
				width 50%
		.bar
			display block
			width 80%
			min-width 200px
			max-width 360px
			right 10px
			top 46px
			position absolute
			&:before, &:after
				content ''
				height 2px
				width 0
				bottom 0
				position absolute
				background $light-teal
				transition(all 0.2s ease)
				-webkit-transform translateZ(0)
			&:before
				left 50%
			&:after
				right 50%
		.close
			display block
			width 24px
			height 24px
			background url('/icons/right.svg') 
			z-index 10
			position absolute
			right 10px
			margin 16px 0
		&.isOpen
			margin-right 0
	&__searchBtn
		height 30px
		width 30px
		cursor pointer
		background url('/icons/search.svg')
		background-size contain
		float right
		margin 13px 10px
		transition(all 0.2s)
		&.isOpen
			margin-right -56px
		
		
@import '../vars-mixins'

.content__body
	&__article
		depth(1)
		border-radius(2px)
		background $white
		padding 10px 20px
		margin-bottom 20px
		cursor context-menu
		&__header
			&__title
				text-align left
				font-size 22px 
				font-weight 600 
				line-height 30px
			&__date 
				color $light-grey
				line-height 26px
				text-align right
		&__body
			padding-bottom 10px
			border-bottom 1px solid $border-grey
			p
				text-align justify
				color $grey
				font-size 14px
				margin 10px 0
			img
				border-radius(2px)
				margin 0 auto
				display block
				width 100% !important
				max-width 1080px 
				min-width 300px
				padding-bottom 10px
		&__comments
			width 95%
			display block
			margin 10px auto
			&__add
				border-bottom 1px solid $border-grey
				&__label
					display block
					font-size 16px 
					line-height 20px
					margin-bottom 10px
				&__textarea
					width 100% 
					border 1px solid $border-grey
					background #eee
					height 100px
					margin-bottom 10px
					padding 5px
					outline none
					border-radius(2px)
				
@import '../vars-mixins'

.content__body__home__article
	text-align right
	&__btn
		border-radius(2px)
		padding 5px 10px
		margin-top 10px
		border solid 1px $border-grey
		background $white
		color $grey
		transition(all 0.4s)
		outline none
		display inline-block
		font-size 14px 
		&:hover
			depth(2)
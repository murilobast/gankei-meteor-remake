@import '../vars-mixins'

.profile
	margin -10px
	&__header
		width 100% 
		height 300px
		background $white
		background-size cover
		background-position center
		&__avatar
			position absolute
			width 150px
			margin-left 30px
			bottom -15%
			border-radius(5px)
			border 5px solid $border-grey
			z-index 1
		&__info
			height 30px
			background $transp-grey
			top 270px
			color $white
			&__name
				margin-left 180px
				line-height 30px
				text-transform capitalize 
				padding 0 10px
		&__controls
			position absolute
			top 0
			right 0
			bottom 0
			width 60px
			&__change
				transition(all 0.4s)
				cursor pointer
				height 60px
				width 60px
				margin-top 240px
				background-image url('http://www.icon2s.com/wp-content/uploads/2013/07/black-white-metro-edit-image-icon.png')
				background-size 90%
				background-repeat no-repeat
				opacity 0
	&__body
		background $white
		padding 20px
		margin 20px
		&__title
			margin-top -20px
			margin-left 150px
			font-size 18px 
			font-weight 600 
		
@media (min-width: 320px) and (max-width: 560px)
	.profile
		&__header
			height 200px
			&__avatar
				width 130px
				margin-left 15px
			&__info
				top 170px
				&__name
					margin-left 145px
			&__controls
				&__change
					margin-top 140px
		&__body
			padding 10px
			margin 10px
			&__title
				margin-top -10px
				margin-left 130px


.profile__modal__change
	transition(all 1s)
	display none
	opacity 0
	width 400px
	background $white
	z-index 100
	position absolute
	top 50%
	left 0
	right 0
	margin auto   
	box-shadow 0 17px 50px 0 rgba(0, 0, 0, 0.19), 0 12px 15px 0 rgba(0, 0, 0, 0.24)
	border-radius(2px)
	overflow hidden 
	&__header
		height 30px
		background $dark-grey
		&__title
			font-size 16px
			font-weight 400
			line-height 30px
			padding-left 10px
			width 370px
			float left
			color $white
		&__close
			width 30px
			float left 
			height 30px    
			background-image url('/icons/close.png')
			background-size 80%
			background-repeat no-repeat
			background-position center 
			filter(invert(1))
	&__body
		padding 10px
		&__label
			display block
			width 100%
			margin-bottom 10px
		&__input
			width 100% 
		&__save
			padding 5px 10px
			color $white
			border none
			background #03A9F4
			font-size 16px 
			margin 10px auto
			margin-bottom 0
			display block
			
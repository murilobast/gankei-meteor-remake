@import '../vars-mixins'

.content__body__home
	min-width 320px 
	max-width 1200px
	margin 0 auto
	margin-top 56px
	padding 20px 10px
	&__article
		depth(0)
		background $main-dark
		cursor default
		margin-bottom 20px
		&__header
			padding 5px 10px
			border-bottom 1px solid $border-grey
			overflow hidden
			&__title
				display block
				text-align left
				font-size 18px 
				font-weight 400 
				line-height 20px
				color $gold
				transition(all 0.4s)
				width 50%
				float left
				&:hover
					color $light-grey
			&__selector
				width 50%
				float right
				overflow hidden
				.dot
					width 20px
					height 20px
					margin 0 5px
					float right
					background $transp-grey
					border 1px solid $border-grey
					text-align center
					border-radius(50%)
					cursor pointer
					&.active
						background $gold
		&__body
			padding-bottom 10px
			border-bottom 1px solid $border-grey
			max-height 480px
			overflow hidden
		&__freeweek
			cursor pointer
			overflow hidden
			padding 5px
			&__champion
				width 20% 
				float left
				overflow hidden
				margin 5px 0
				&__name
					color $white
					position absolute
					z-index 1
					bottom 0px
					left 1px
					right 1px
					width 90%
					margin auto
					background $transp-grey
					text-align center
					font-size 12px
					font-weight 200 
				&__image
					width 90% 
					display block
					margin 0 auto
		&__featured
			clear both
			width 100% 
		& .featured
			overflow hidden
			padding 5px
			width 99%
			margin 5px auto
			&__blue, &__purple
				width 50%
				&__player
					overflow hidden
					padding 5px
					&__icon
						width 25%
						display block
					&__name
						display inline-block
						vertical-align top 
						font-size 0.8em 
						overflow hidden
						-ms-text-overflow ellipsis 
						text-overflow ellipsis 
						width 70% 
						color $white 
						height 1em 
			&__blue
				float left
				&__player
					&__icon
						float right
						clear right
					&__name
						text-align right
						float left
						clear left
			&__purple
				float right
				&__player
					&__icon
						float left
						clear left
					&__name
						text-align left
						float right
						clear right
					 
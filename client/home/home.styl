@import '../vars-mixins'

.content__body__home
	&__article
		border-radius(2px)
		background $white
		padding 10px 20px
		margin-bottom 20px
		&__header
			height 30px
			&__title
				font-size 16px 
				font-weight 600 
		&__body
			&__text
				color $grey
				font-size 14px
				padding-bottom 10px
			&__image--large
				width 100%
				padding-bottom 10px
			&__freeweek
				width 100%
				overflow hidden 
				margin-bottom 10px
				text-align center
				&__champ
					
					overflow hidden
					//float left
					display inline-block
					width 20%
					@media (min-width: 320px) and (max-width: 560px)
						width 31%
						margin 0 1%
					&__img
						width 100%
					&__name
						width 100%
						height 20px
						background black
						padding 0
						line-height 20px
						color $white
						position absolute
						bottom 0
						text-align center

@import '../vars-mixins'

.loginButtons
	padding 10px 0
	width 100%
	background $white
	&__form
		width 80%
		margin 0 auto 
		&__label
			line-height 20px
			font-size 14px 
			font-weight 500
		&__input
			width 100% 
			border none
			border-bottom 1px solid $dark-grey
			background $white
			outline none
			transition(all 0.4s)
			&:focus
				padding-left 5px
				border-bottom-color $blue
		&__btn
			display block
			width 90%
			margin 10px auto
			//color $white
			color $grey
			border none
			border 1px solid $border-grey
			//border-bottom 2px solid $grey
			line-height 30px
			font-size 14px 
			transition(all 0.6s)
			&:hover
				depth(2)
			&.login
				//background $blue
				background $white
	&__acc
		font-size 12px 
		margin 0 20px
		text-align center
		a
			color $red